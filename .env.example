# Sumi Finance Tracker Frontend Environment Configuration
# Copy this file to .env and customize the values for your environment

# Application Configuration
VITE_APP_NAME=Sumi
VITE_APP_VERSION=1.0.0
VITE_NODE_ENV=development

# API Configuration
# Backend API base URL - change this to your backend server URL
VITE_API_BASE_URL=http://localhost:8080

# Development Configuration
# Enable detailed debugging (optional)
VITE_DEBUG=false

# Theme Configuration
# Default theme: 'light', 'dark', or 'system' (follows system preference)
VITE_DEFAULT_THEME=system

# Feature Flags (optional)
# Enable/disable features during development
VITE_ENABLE_SMART_ALLOCATION=true
VITE_ENABLE_TRANSACTION_SPLITTING=true
VITE_ENABLE_CSV_IMPORT=true
VITE_ENABLE_RECURRING_TRANSACTIONS=true

# Analytics Configuration (optional)
# Uncomment and configure if you want to add analytics
# VITE_ANALYTICS_ID=your-analytics-id
# VITE_ENABLE_ANALYTICS=false

# Performance Configuration (optional)
# Enable performance monitoring in development
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Security Configuration (optional)
# Enable Content Security Policy in development
VITE_ENABLE_CSP=false

# Logging Configuration
# Log level: 'error', 'warn', 'info', 'debug'
VITE_LOG_LEVEL=info

# Build Configuration (production)
# These variables are used during the build process
# VITE_BUILD_TARGET=es2015
# VITE_BUILD_SOURCEMAP=false

# Database Configuration (for development tools)
# These are used by development scripts and are not exposed to the frontend
# DEV_DATABASE_URL=sqlite://./dev.db
# DEV_API_PORT=8080

# Network Configuration
# Proxy configuration for development server
# These are handled by vite.config.ts, but can be overridden here
# VITE_PROXY_API_TARGET=http://localhost:8080
# VITE_PROXY_TIMEOUT=5000

# Error Handling Configuration
# Enable error reporting service (optional)
# VITE_ERROR_REPORTING_SERVICE=sentry
# VITE_ERROR_REPORTING_DSN=your-dsn-here

# Cache Configuration
# Configure caching behavior
VITE_ENABLE_API_CACHE=true
VITE_CACHE_DURATION_MS=300000

# UI Configuration
# Customize UI behavior
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_TOOLTIPS=true
VITE_TABLE_PAGE_SIZE=20

# Development Tools
# Enable development tools and features
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_DEVTOOLS=true

# Testing Configuration
# Configuration for test environment
# VITE_TEST_API_BASE_URL=http://localhost:8081
# VITE_TEST_DATABASE_URL=sqlite://./test.db

# Deployment Configuration
# These variables are used for deployment
# VITE_DEPLOYMENT_ENVIRONMENT=production
# VITE_BUILD_NUMBER=1.0.0
# VITE_COMMIT_HASH=abc123

# Backup Configuration
# Configure backup and sync features (if implemented)
# VITE_ENABLE_AUTO_BACKUP=false
# VITE_BACKUP_INTERVAL_MS=3600000

# Notification Configuration
# Configure push notifications (if implemented)
# VITE_ENABLE_NOTIFICATIONS=false
# VITE_NOTIFICATION_SERVICE_URL=https://your-notification-service.com

# External Services Configuration
# Configure external integrations (if any)
# VITE_BANK_API_KEY=your-bank-api-key
# VITE_CURRENCY_API_KEY=your-currency-api-key

# Localization Configuration
# Configure language and region settings
VITE_DEFAULT_LOCALE=en-US
VITE_DEFAULT_CURRENCY=USD
VITE_DEFAULT_DATE_FORMAT=MM/DD/YYYY

# Accessibility Configuration
# Configure accessibility features
VITE_ENABLE_HIGH_CONTRAST=false
VITE_ENABLE_REDUCED_MOTION=false

# Development Server Configuration
# Configure the development server behavior
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_HOST=localhost
VITE_DEV_SERVER_OPEN=false

# Build Output Configuration
# Configure build output directory and file naming
# VITE_BUILD_OUTDIR=dist
# VITE_BUILD_ASSETS_DIR=assets