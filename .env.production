# Production Environment Configuration for Netlify Deployment
# This file contains production-specific environment variables

# Application Configuration
VITE_APP_NAME=Cove
VITE_APP_VERSION=1.0.0
VITE_NODE_ENV=production

# API Configuration
# IMPORTANT: Replace with your actual production backend URL
VITE_API_BASE_URL=https://your-backend-api.herokuapp.com
# Alternative: If using Netlify Functions
# VITE_API_BASE_URL=/.netlify/functions

# Build Configuration
VITE_BUILD_TARGET=es2015
VITE_BUILD_SOURCEMAP=false
GENERATE_SOURCEMAP=false

# Theme Configuration
VITE_DEFAULT_THEME=system

# Feature Flags - Enable all features for production
VITE_ENABLE_SMART_ALLOCATION=true
VITE_ENABLE_TRANSACTION_SPLITTING=true
VITE_ENABLE_CSV_IMPORT=true
VITE_ENABLE_RECURRING_TRANSACTIONS=true

# Performance Configuration
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Security Configuration
VITE_ENABLE_CSP=true

# Logging Configuration - Use warn level for production
VITE_LOG_LEVEL=warn

# Analytics Configuration (uncomment and configure if needed)
# VITE_ANALYTICS_ID=GA-XXXXXXXXX
# VITE_ENABLE_ANALYTICS=true

# Error Reporting Configuration (uncomment and configure if needed)
# VITE_ERROR_REPORTING_SERVICE=sentry
# VITE_ERROR_REPORTING_DSN=https://your-sentry-dsn@sentry.io/project-id

# Cache Configuration
VITE_ENABLE_API_CACHE=true
VITE_CACHE_DURATION_MS=600000

# UI Configuration
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_TOOLTIPS=true
VITE_TABLE_PAGE_SIZE=20

# Localization Configuration
VITE_DEFAULT_LOCALE=en-US
VITE_DEFAULT_CURRENCY=USD
VITE_DEFAULT_DATE_FORMAT=MM/DD/YYYY

# Accessibility Configuration
VITE_ENABLE_HIGH_CONTRAST=false
VITE_ENABLE_REDUCED_MOTION=false

# Deployment Configuration
VITE_DEPLOYMENT_ENVIRONMENT=production
VITE_BUILD_NUMBER=1.0.0

# Disable development-only features
VITE_DEBUG=false
VITE_ENABLE_REDUX_DEVTOOLS=false
VITE_ENABLE_REACT_DEVTOOLS=false